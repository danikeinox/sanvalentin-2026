  .heart-back {
    transform: rotateY(180deg);
    flex-direction: column;
    gap: 1.2rem;
    text-align: center;
    position: relative;
    width: 100%;
    height: 100%;
    display: grid;
    place-items: center;
  }

  .red-floaters {
    position: absolute;
    left: 50%;
    top: 50%;
    width: var(--float-area, 280px);
    height: var(--float-area, 280px);
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
    transform-origin: 50% 50%;
  }

