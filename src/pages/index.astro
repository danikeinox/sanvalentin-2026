---
import fs from "node:fs";
import path from "node:path";
import Layout from "../layouts/Layout.astro";

const publicDir = new URL("../../public", import.meta.url);
const allowed = [".png", ".jpg", ".jpeg", ".webp", ".gif"];
const imageList = fs
  .readdirSync(publicDir)
  .filter((name) => {
    const ext = path.extname(name).toLowerCase();
    return allowed.includes(ext) && /^\d+\./.test(name);
  })
  .sort((a, b) => {
    const aNum = Number.parseInt(a, 10);
    const bNum = Number.parseInt(b, 10);
    return aNum - bNum;
  })
  .map((name) => `/${name}`);

const totalPhotos = 50;

const createHeartPoints = (count) => {
  const points = [];
  for (let i = 0; i < count; i += 1) {
    const t = (i / count) * Math.PI * 2;
    const x = 16 * Math.pow(Math.sin(t), 3);
    const y =
      13 * Math.cos(t) -
      5 * Math.cos(2 * t) -
      2 * Math.cos(3 * t) -
      Math.cos(4 * t);
    points.push({ x, y });
  }

  const xs = points.map((p) => p.x);
  const ys = points.map((p) => p.y);
  const minX = Math.min(...xs);
  const maxX = Math.max(...xs);
  const minY = Math.min(...ys);
  const maxY = Math.max(...ys);

  return points.map((point) => ({
    x: (point.x - minX) / (maxX - minX),
    y: 1 - (point.y - minY) / (maxY - minY),
  }));
};

const selectedImages = imageList.slice(0, totalPhotos);
const heartPoints = createHeartPoints(selectedImages.length);
---

<Layout>
  <main class="scene">
    <div class="overlay">
      <button id="startButton" class="love-button" type="button">
        Haz Clic Amor <span aria-hidden="true">❤️</span>
      </button>
      <div id="message" class="message" aria-live="polite">
        <span>Feliz San Valentín</span>
        <small>Luz</small>
        <span id="hint" class="hint">Toca el corazón</span>
      </div>
    </div>

    <div id="heartStage" class="heart-stage" aria-hidden="true">
      <div id="heartCard" class="heart-card">
        <div class="heart-face heart-front">
          <div id="photoHeart" class="photo-heart">
            {
              selectedImages.map((src, index) => {
                const point = heartPoints[index];
                return (
                  <img
                    class="photo"
                    src={src}
                    alt={`Recuerdo ${index + 1}`}
                    style={`--x:${point.x}; --y:${point.y}; --delay:${index * 60}ms;`}
                    data-x={point.x}
                    data-y={point.y}
                  />
                );
              })
            }
          </div>
        </div>
        <div class="heart-face heart-back">
          <div class="red-heart">
            <div class="heart-overlay heart-overlay--back">
              <h2>Te Amo</h2>
              <p>Estoy muy feliz de estar contigo mi amor</p>
              <div id="counter" class="counter"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  const startButton = document.getElementById("startButton");
  const message = document.getElementById("message");
  const heartStage = document.getElementById("heartStage");
  const heartCard = document.getElementById("heartCard");
  const photoHeart = document.getElementById("photoHeart");
  const hint = document.getElementById("hint");
  const counter = document.getElementById("counter");

  const startDate = new Date(2022, 7, 26, 0, 0, 0);

  const sleep = (ms) => new Promise((resolve) => setTimeout(resolve, ms));

  const loadImage = (src) =>
    new Promise((resolve, reject) => {
      const img = new Image();
      img.onload = () => resolve(src);
      img.onerror = reject;
      img.src = src;
    });

  const getStartOffset = (targetX, targetY, rect) => {
    const fromLeft = Math.random() > 0.5;
    const startX = fromLeft ? -200 : window.innerWidth + 200;
    const startY = Math.random() * window.innerHeight;
    const absoluteTargetX = rect.left + targetX;
    const absoluteTargetY = rect.top + targetY;
    return {
      x: startX - absoluteTargetX,
      y: startY - absoluteTargetY,
    };
  };

  const updateCounter = () => {
    if (!counter) return;
    const now = new Date();
    let anchor = new Date(startDate.getTime());

    let years = now.getFullYear() - anchor.getFullYear();
    const testYear = new Date(anchor.getTime());
    testYear.setFullYear(anchor.getFullYear() + years);
    if (testYear > now) {
      years -= 1;
    }
    anchor.setFullYear(anchor.getFullYear() + years);

    let months = now.getMonth() - anchor.getMonth();
    if (months < 0) months += 12;
    const testMonth = new Date(anchor.getTime());
    testMonth.setMonth(anchor.getMonth() + months);
    if (testMonth > now) {
      months -= 1;
    }
    anchor.setMonth(anchor.getMonth() + months);

    let diffMs = now - anchor;
    const days = Math.floor(diffMs / (1000 * 60 * 60 * 24));
    diffMs -= days * 1000 * 60 * 60 * 24;
    const hours = Math.floor(diffMs / (1000 * 60 * 60));
    diffMs -= hours * 1000 * 60 * 60;
    const minutes = Math.floor(diffMs / (1000 * 60));
    diffMs -= minutes * 1000 * 60;
    const seconds = Math.floor(diffMs / 1000);

    counter.textContent = `${years} años, ${months} meses, ${days} días, ${hours} horas, ${minutes} minutos y ${seconds} segundos`;
  };

  const buildHeart = async () => {
    if (!photoHeart) return;
    const photos = Array.from(photoHeart.querySelectorAll(".photo"));
    hint?.classList.remove("show");

    photos.forEach((photo) => photo.classList.remove("arrived"));

    const rect = photoHeart.getBoundingClientRect();
    const photoSize = Math.max(22, Math.min(46, rect.width / 11));
    photoHeart.style.setProperty("--photo-size", `${photoSize}px`);

    photos.forEach((photo) => {
      const x = Number.parseFloat(photo.dataset.x || "0");
      const y = Number.parseFloat(photo.dataset.y || "0");
      const targetX = x * rect.width;
      const targetY = y * rect.height;
      const startOffset = getStartOffset(targetX, targetY, rect);
      photo.style.setProperty("--start-x", `${startOffset.x}px`);
      photo.style.setProperty("--start-y", `${startOffset.y}px`);

      requestAnimationFrame(() => {
        photo.classList.add("arrived");
      });
    });

    const totalDuration = photos.length * 60 + 1400;
    await sleep(totalDuration);
    heartStage?.classList.add("ready");
    hint?.classList.add("show");
  };

  updateCounter();
  setInterval(updateCounter, 1000);

  const startSequence = async () => {
    startButton?.setAttribute("disabled", "true");
    startButton?.classList.add("hidden");
    if (message && photoHeart) {
      const from = message.getBoundingClientRect();
      photoHeart.appendChild(message);
      message.classList.add("in-heart");
      const to = message.getBoundingClientRect();
      const deltaX = from.left - to.left;
      const deltaY = from.top - to.top;
      message.animate(
        [
          { transform: `translate(${deltaX}px, ${deltaY}px)` },
          { transform: "translate(0, 0)" },
        ],
        {
          duration: 800,
          easing: "cubic-bezier(0.2, 0.8, 0.2, 1)",
          fill: "both",
        },
      );
    }
    heartStage?.classList.add("visible");
    await sleep(300);
    await buildHeart();
  };

  startButton?.addEventListener("click", startSequence);

  heartStage?.addEventListener("click", () => {
    if (!heartStage.classList.contains("ready")) return;
    heartCard?.classList.toggle("flipped");
  });
</script>

<style>
  .scene {
    min-height: 100vh;
    display: grid;
    place-items: center;
    position: relative;
    overflow: hidden;
    padding: 1.5rem;
  }

  .overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    z-index: 2;
    pointer-events: none;
    text-align: center;
  }

  .love-button {
    pointer-events: auto;
    background: #f87171;
    color: #120f11;
    border: none;
    padding: 0.85rem 2rem;
    font-size: 0.95rem;
    border-radius: 999px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    cursor: pointer;
    transition:
      transform 0.25s ease,
      opacity 0.25s ease;
  }

  .love-button span {
    margin-left: 0.6rem;
  }

  .love-button:hover {
    transform: translateY(-1px) scale(1.01);
  }

  .love-button.hidden {
    opacity: 0;
    pointer-events: none;
    transform: translateY(10px) scale(0.98);
  }

  .message {
    font-size: 1.9rem;
    font-weight: 600;
    opacity: 1;
    transition: transform 0.6s ease;
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    letter-spacing: 0.04em;
  }

  .message small {
    font-size: 1rem;
    font-weight: 300;
    letter-spacing: 0.18em;
  }

  .message.in-heart {
    position: absolute;
    inset: 0;
    align-items: center;
    justify-content: center;
    text-align: center;
    pointer-events: none;
    z-index: 2;
    transform: translate(0, 0) scale(0.9);
  }

  .heart-stage {
    width: 82vmin;
    height: 82vmin;
    perspective: 1200px;
    opacity: 0;
    transform: scale(0.97);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
    z-index: 1;
    pointer-events: none;
    display: grid;
    place-items: center;
  }

  .heart-stage.visible {
    opacity: 1;
    transform: scale(1);
    pointer-events: auto;
  }

  .heart-card {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: transform 0.9s ease;
  }

  .heart-card.flipped {
    transform: rotateY(180deg);
  }

  .heart-face {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    backface-visibility: hidden;
  }

  .heart-front {
    padding: 1rem;
  }

  .heart-back {
    transform: rotateY(180deg);
    flex-direction: column;
    gap: 1.2rem;
    text-align: center;
    padding: 1rem;
  }

  .photo-heart {
    position: relative;
    width: 72vmin;
    height: 72vmin;
    margin: 0 auto;
  }

  .heart-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-align: center;
    pointer-events: none;
    color: #ffe3e7;
    text-shadow: 0 10px 24px rgba(0, 0, 0, 0.35);
  }

  .heart-overlay h2 {
    margin: 0;
    font-size: 1.4rem;
    letter-spacing: 0.08em;
  }

  .heart-overlay p {
    margin: 0;
    font-size: 0.9rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .photo {
    position: absolute;
    width: var(--photo-size, 44px);
    height: var(--photo-size, 44px);
    object-fit: cover;
    border-radius: 12px;
    opacity: 0;
    left: calc(var(--x) * 100%);
    top: calc(var(--y) * 100%);
    transform: translate(-50%, -50%)
      translate3d(var(--start-x), var(--start-y), 0) scale(0.4);
    transition:
      transform 1.1s ease,
      opacity 0.9s ease;
    transition-delay: var(--delay);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.35);
  }

  .photo.arrived {
    opacity: 1;
    transform: translate(-50%, -50%) translate3d(0, 0, 0) scale(1);
  }

  .heart-stage.ready .photo-heart {
    cursor: pointer;
  }

  .hint {
    position: static;
    margin-top: 0.5rem;
    font-size: 0.65rem;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    opacity: 0;
    transition: opacity 0.6s ease;
    color: #f5d2d8;
  }

  .hint.show {
    opacity: 0.75;
  }

  .red-heart {
    width: 46vmin;
    height: 46vmin;
    position: relative;
    background: #f43f5e;
    transform: rotate(-45deg);
    border-radius: 18px;
    overflow: visible;
  }

  .red-heart::before,
  .red-heart::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: #f43f5e;
    border-radius: 50%;
  }

  .red-heart::before {
    top: -50%;
    left: 0;
  }

  .red-heart::after {
    left: 50%;
    top: 0;
  }

  .heart-overlay--back {
    transform: rotate(45deg);
    padding: 1rem;
    color: #ffe3e7;
    text-shadow: 0 10px 24px rgba(0, 0, 0, 0.35);
    z-index: 2;
  }

  .heart-overlay--back h2 {
    font-size: 1.9rem;
    transform: translateY(-6px);
  }

  .heart-overlay--back p {
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    text-transform: none;
  }

  .counter {
    font-size: 0.85rem;
    color: #f7c8d0;
    padding: 0.7rem 1.1rem;
    border-radius: 999px;
    background: rgba(244, 63, 94, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (min-width: 600px) {
    .scene {
      padding: 2rem;
    }

    .love-button {
      padding: 0.95rem 2.4rem;
      font-size: 1.05rem;
    }

    .message {
      font-size: 2.4rem;
    }

    .message small {
      font-size: 1.2rem;
    }

    .heart-stage {
      width: min(78vmin, 560px);
      height: min(78vmin, 560px);
    }

    .photo-heart {
      width: min(70vmin, 520px);
      height: min(70vmin, 520px);
    }

    .heart-overlay h2 {
      font-size: 1.7rem;
    }

    .heart-overlay p {
      font-size: 1rem;
    }

    .hint {
      font-size: 0.7rem;
    }
  }

  @media (min-width: 900px) {
    .scene {
      padding: 3rem;
    }

    .love-button {
      font-size: 1.2rem;
    }

    .message {
      font-size: 3.4rem;
    }

    .message small {
      font-size: 1.6rem;
    }

    .heart-overlay h2 {
      font-size: 2.2rem;
    }

    .heart-overlay--back h2 {
      font-size: 2.4rem;
    }

    .heart-overlay--back p {
      font-size: 1.05rem;
    }
  }
</style>
